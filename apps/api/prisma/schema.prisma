// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model User {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())

  email                 String  @unique
  password              String
  name                  String?
  isEmailVerified       Boolean @default(false)
  isSubscriptionStarted Boolean @default(false)
  isBlocked             Boolean @default(false)
  isDeleted             Boolean @default(false)
  stripeCustomerId      String?
  stripeSubscriptionId  String?

  ChatBot         ChatBot[]
  ChatBotSettings ChatBotSettings[]
  Conversation    Conversation[]
  ChatBotTextData ChatBotTextData[]
}

model ChatBot {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())

  name   String
  url    String
  userId String

  user            User              @relation(fields: [userId], references: [id])
  ChatBotSettings ChatBotSettings[]
  ChatBotTextData ChatBotTextData[]

  @@unique([id, userId])
}

model ChatBotTextData {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())

  chatBotId String
  userId    String
  title     String
  text      String
  embading  Unsupported("vector(1536)")?

  chatBot ChatBot @relation(fields: [chatBotId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([userId, chatBotId])
}

enum CHAT_BUBBLE_ALIGNMENT {
  LEFT
  RIGHT
}

model ChatBotSettings {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())

  chatBotId String
  userId    String

  welcomeMessage      String
  suggestionMessage   String
  displayName         String
  displayPicture      String
  userColorMessage    String
  chatBotColorMessage String
  chatBackgroundColor String
  chatBubbleColor     String
  chatBubbleAlignment CHAT_BUBBLE_ALIGNMENT @default(RIGHT)

  chatBot ChatBot @relation(fields: [chatBotId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([chatBotId, userId])
}

model Conversation {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  chatBotId String

  Message Message[]
  User    User      @relation(fields: [userId], references: [id])

  @@unique([id, userId])
  @@unique([id, chatBotId])
}

enum MESSAGE_ROLE {
  USER
  CHATBOT
}

model Message {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())

  conversationId String
  message        String
  role           String

  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@unique([id, conversationId])
}
